#include <stdio.h>
#define MAXSIZE 100

int main()
{
    int arr[MAXSIZE] ,i , size ,elment , postion, num ;
	printf("enter size of array ");
	scanf("%d" , &size);
	printf("Input array elements: ");
	for(i = 0 ; i<size ;i++){
		scanf("%d", &arr[i]);
	}
	
	max = arr[0];
	min = arr[0];

	for(i=0 ;i<size ; i++)
	{
		if(arr[i] > max)
			max = arr[i];
		
		if (arr[i] < min)
			min = arr[i];
	}
		printf(" maxuimn = %d" , max);
		printf(" minimun = %d" , min);

}

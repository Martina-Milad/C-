#include <stdio.h>
#define MAXSIZE 100

int main()
{
    int arr1[MAXSIZE] ,i , size , arr2[MAXSIZE] ;
	printf("enter size of array ");
	scanf("%d" , &size);
	printf("Input array elements: ");
	for(i = 0 ; i<size ;i++){
		scanf("%d", &arr1[i]);
	}
	
	printf("Array1 :\n")
	for(i=0 ;i<size ; i++)
	{
		printf("%d\n" , arr1[i]);
	}
		printf("Array2 :\n");
		for(i=0 ;i<size ; i++)
	{
		arr2[i] = arr1[i];
		printf("%d\n" , arr2[i]);
	}



}
